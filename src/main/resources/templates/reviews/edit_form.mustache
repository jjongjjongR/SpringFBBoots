{{>layouts/header}}
<h2 class="text-center mb-4" style="font-weight:700;">리뷰 수정</h2>
<form action="/reviews/{{review.id}}/edit" method="post" class="w-50 mx-auto card p-4 shadow-lg border-0" style="border-radius:18px;">
    <label class="mt-2 mb-1"><b>착화감</b> <span class="text-muted">( 매우 나쁨 1 ~ 5 매우 좋음 )</span></label>
    <input type="number" name="comfort" value="{{review.comfort}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>발볼</b> <span class="text-muted">( 매우 좁음 1 ~ 5 매우 넓음 )</span></label>
    <input type="number" name="width" value="{{review.width}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>길이감</b> <span class="text-muted">( 매우 짧음 1 ~ 5 매우 긺 )</span></label>
    <input type="number" name="length" value="{{review.length}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>터치감</b> <span class="text-muted">( 매우 나쁨 1 ~ 5 매우 좋음 )</span></label>
    <input type="number" name="touch" value="{{review.touch}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>슈팅감</b> <span class="text-muted">( 매우 나쁨 1 ~ 5 매우 좋음 )</span></label>
    <input type="number" name="shooting" value="{{review.shooting}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>아웃솔 안정감</b> <span class="text-muted">( 매우 나쁨 1 ~ 5 매우 좋음 )</span></label>
    <input type="number" name="outsole" value="{{review.outsole}}" class="form-control mb-2" required min="1" max="5">

    <label class="mb-1"><b>종합 별점</b> <span class="text-muted">(1 ~ 5)</span></label>
    <input type="number" name="overall" value="{{review.overall}}" class="form-control mb-3" required min="1" max="5">

    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary">수정 완료</button>
        <a href="/boots/{{review.fbBoot.id}}" class="btn btn-outline-secondary ms-2">취소</a>
    </div>
</form>
{{>layouts/footer}}
